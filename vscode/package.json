{
  "name": "konveyor",
  "publisher": "Konveyor",
  "displayName": "konveyor",
  "description": "VSCode Extension for Konveyor to assist in migrating and modernizing applications.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0",
    "node": ">=20.12.2",
    "npm": "^9.5.0 || ^10.5.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "konveyor.toggleFullScreen",
        "title": "Toggle Fullscreen",
        "category": "Konveyor",
        "icon": "$(fullscreen)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "konveyor",
          "title": "Konveyor",
          "icon": "$(extensions)"
        }
      ]
    },
    "views": {
      "konveyor": [
        {
          "type": "webview",
          "id": "konveyor.konveyorGUIView",
          "name": "Konveyor",
          "visibility": "visible"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "konveyor.toggleFullScreen",
          "group": "navigation@1",
          "when": "view == konveyor.konveyorGUIView"
        }
      ],
      "editor/title": [
        {
          "command": "konveyor.toggleFullScreen",
          "group": "navigation@1",
          "when": "activeWebviewPanelId == konveyor.konveyorGUIView"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --mode production --config webpack.config.js",
    "watch": "webpack --watch --mode development --config webpack.config.js",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir test_out",
    "watch-tests": "tsc -p . -w --outDir test_out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "clean": "rimraf ./out ./test_out"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "typescript-eslint": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "@eslint/js": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.2",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "prettier": "^3.0.2",
    "rimraf": "^4.4.1"
  },
  "dependencies": {
    "babel-loader": "^9.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^10.0.0"
  }
}